# Run gcov code coverage analysis. -*- Autotest -*-

AT_BANNER([[gcov Coverage Analysis]])

AT_SETUP([bat gcov analysis])
AT_SKIP_IF([test "x${WITH_GCOV}" != xyes || test "x${WITH_GTEST}" != xyes])
AT_CHECK([lcov-coverage bat], [0], [ignore], [ignore])
AT_CLEANUP

dnl AT_SETUP([myapp gcov analysis])
dnl AT_SKIP_IF([test "x${WITH_GCOV}" != xyes])
dnl AT_CHECK([lcov-coverage myapp], [0], [ignore], [ignore])
dnl AT_CLEANUP

