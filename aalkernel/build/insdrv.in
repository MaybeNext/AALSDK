shopt -o -s nounset

declare -r SCRIPT="${0##*/}"

declare -r BUILD_DIR='@abs_top_builddir@'

die() {
   local -r msg="$1"
   printf "%s\n" "${msg}"
   exit 1
}

declare -r CHMOD="`which chmod`" 2>/dev/null
[ "x${CHMOD}" = "x" ] && die "no chmod?"
declare -r GREP="`which grep`" 2>/dev/null
[ "x${GREP}" = "x" ] && die "no grep?"
declare -r INSMOD='/sbin/insmod'
declare -r LS="`which ls`" 2>/dev/null
[ "x${LS}" = "x" ] && die "no ls?"
declare -r LSMOD="`which lsmod`" 2>/dev/null
[ "x${LSMOD}" = "x" ] && die "no lsmod?"
declare -r SLEEP="`which sleep`" 2>/dev/null
[ "x${SLEEP}" = "x" ] && die "no sleep?"

# Names for sets of drivers which can be loaded by this script.
declare -ra DRIVER_SETS=(\
'cci' \
'cci-sim' \
'cci-dbg' \
'cci-sriov' \
'cci-vf'\
)

declare -r DEV_PERMS='a+rw'

print_help() {
   cat << END
Usage: ${SCRIPT} set1 [set2 ...]
          where setX is one of the following: ${DRIVER_SETS[@]}

END
}

if [ $# -lt 1 ]; then
   print_help
   die "Run me again, and give a driver set name."
fi

declare mod
declare mod_path

case $1 in

   cci)
      mod="@AALBUS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalbus/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_server/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMC_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_client/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@CCIPCIEDRV_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/cci_PCIe_driver/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"
   ;; # cci 
      
   cci-sim|cci_sim)
      mod="@AALBUS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalbus/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" debug=15; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_server/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" debug=15 ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMC_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_client/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@CCIPCIEDRV_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/cci_PCIe_driver/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" sim=1 debug=-134217601; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"
   ;; # cci-sim | cci_sim

   cci-dbg|cci_dbg|cci-debug|cci_debug)
      mod="@AALBUS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalbus/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_server/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMC_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_client/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@CCIPCIEDRV_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/cci_PCIe_driver/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" debug=-134217601; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"
   ;; # cci-dbg | cci_dbg | cci-debug | cci_debug

   cci-sriov|cci_sriov)
      mod="@AALBUS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalbus/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_server/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMC_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_client/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@CCIPCIEDRV_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/cci_PCIe_driver/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" sriov=1; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"
   ;; # cci-sriov | cci_sriov

   cci-vf|cci_vf)
      mod="@AALBUS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalbus/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMS_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_server/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@AALRMC_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/aalresourcemgr_client/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" ; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"

      mod="@CCIPCIEDRV_DRV_NAME@.ko"
      mod_path="${BUILD_DIR}/cci_PCIe_driver/kbuild"
      printf "insmod %-15s " "${mod}"
      if ${LSMOD} | ${GREP} -q "^${mod%.*}" ; then
         printf "[ALREADY]\n"
      elif ! ${INSMOD} "${mod_path}/${mod}" skip_pf=1; then
         die "[FAIL]"
      fi
      printf "[ OK ]\n"
   ;; # cci-vf | cci_vf

   ##  The following are to be deprecated 
   base)
      die "base is no longer available. Try cci."
   ;;

   cciv4)
      die "cciv4 is no longer available. Try cci."
   ;;

   cciv4-sim|cciv4_sim)
      die "cciv4-sim and cciv4_sim are no longer available. Try cci-sim."
   ;; # cciv4-sim|cciv4_sim
   ##  End of deprecated options

   *)
      print_help
      die "$1 is not a valid driver set."
   ;;

esac

${SLEEP} 3

${CHMOD} "${DEV_PERMS}" '/dev/uidrv'     || die "dev file perms for uidrv"
${CHMOD} "${DEV_PERMS}" '/dev/aalrms'    || die "dev file perms for aalrms"
${CHMOD} "${DEV_PERMS}" '/dev/aalresmgr' || die "dev file perms for aalresmgr"
${LS} -l '/dev/uidrv' '/dev/aalrms' '/dev/aalresmgr' 

exit 0

